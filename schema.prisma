// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Project {
  id            String     @default(cuid()) @id
  title         String
  description   String?
  published     Boolean   @default(false)
  technologies  Technology[]
  categoryId    String
  category      Category  @relation(fields: [categoryId], references: [id])
  images        Image[]   
}

model Image {
  id          String   @default(cuid()) @id
  url         String
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
}

model Category {
  id          String   @default(cuid()) @id
  label_cs    String
  label_en    String
  projects    Project[]
}

model Technology {
  id          String   @default(cuid()) @id
  label_cs    String
  label_en    String
  projects    Project[]
}
